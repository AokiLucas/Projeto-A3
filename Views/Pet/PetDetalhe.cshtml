@model PetControl.DTOs.UpdatePetDto

@{
    ViewData["Title"] = "Editar Pet";
}

<form asp-action="UpdatePet" asp-controller="Pet" method="post" enctype="multipart/form-data" class="w-50 mx-auto">
    <input type="hidden" asp-for="Id" />

    <div class="form-floating mb-3">
        <input asp-for="Nome" class="form-control" id="Nome" placeholder="Nome" />
        <label for="Nome">Nome</label>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Especie" class="form-control" id="Especie" placeholder="Espécie" />
        <label for="Especie">Espécie</label>
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Raca" class="form-control" id="Raca" placeholder="Raça" />
        <label for="Raca">Raça</label>
        <span asp-validation-for="Raca" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="DataNascimento" type="date" class="form-control" id="DataNascimento" placeholder="Data de Nascimento" />
        <label for="DataNascimento">Data de Nascimento</label>
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.FotoUrl))
    {
        <div class="mb-3 text-center">
            <img src="@Model.FotoUrl" alt="Foto do Pet" class="img-thumbnail" style="max-height: 200px;" />
            <p class="text-muted mt-2">Foto atual do pet</p>
        </div>
    }

    <div class="form-floating mb-3">
        <input asp-for="FotoPet" type="file" class="form-control" id="FotoPet" placeholder="Trocar Foto" />
        <label for="FotoPet">Trocar Foto</label>
        <span asp-validation-for="FotoPet" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select asp-for="Sexo" class="form-select" id="Sexo" aria-label="Sexo">
            <option value="M" selected="@(Model.Sexo == 'M')">Macho</option>
            <option value="F" selected="@(Model.Sexo == 'F')">Fêmea</option>
        </select>
        <label for="Sexo">Sexo</label>
        <span asp-validation-for="Sexo" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Peso" type="number" step="0.01" class="form-control" id="Peso" placeholder="Peso (kg)" />
        <label for="Peso">Peso (kg)</label>
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <textarea asp-for="Observacoes" class="form-control" id="Observacoes" placeholder="Observações" style="height: 100px;"></textarea>
        <label for="Observacoes">Observações</label>
        <span asp-validation-for="Observacoes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100 py-2 my-2">Atualizar</button>
</form>
